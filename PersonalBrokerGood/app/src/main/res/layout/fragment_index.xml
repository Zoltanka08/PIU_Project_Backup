<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        app:srcCompat="@drawable/clock"
        android:id="@+id/imageView5"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_below="@+id/index2_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="19:15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index2_date"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index2_percentage"
        android:layout_alignBaseline="@+id/index2_type"
        android:layout_alignBottom="@+id/index2_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index2_type"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:layout_alignBaseline="@+id/index2_date"
        android:layout_alignBottom="@+id/index2_date"
        android:layout_toRightOf="@+id/index2_date"
        android:layout_toEndOf="@+id/index2_date" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index2_price"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index2_name"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/index2_price"
        android:layout_alignBottom="@+id/index2_price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/index2_rate"
        android:layout_alignBaseline="@+id/index2_percentage"
        android:layout_alignBottom="@+id/index2_percentage"
        android:layout_toLeftOf="@+id/index2_percentage"
        android:layout_toStartOf="@+id/index2_percentage"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

</RelativeLayout>
