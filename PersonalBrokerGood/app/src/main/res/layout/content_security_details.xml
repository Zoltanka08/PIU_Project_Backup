<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_security_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pluralsight.zoltan.personalbrokergood.PortfolioDetailsActivity"
    tools:showIn="@layout/activity_portfolio_details">

    <TextView
        android:text="Security Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/security_name"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="0.12%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/security_percentage"
        android:textSize="24sp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:text="Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView11"
        android:textSize="18sp"
        android:layout_below="@+id/security_percentage"
        android:layout_alignLeft="@+id/security_percentage"
        android:layout_alignStart="@+id/security_percentage"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="1,234.55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_rate"
        android:textSize="24sp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:text="Ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="18sp"
        android:layout_above="@+id/security_rate"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

    <TextView
        android:text="Bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:layout_above="@+id/security_bid"
        android:layout_alignRight="@+id/security_bid"
        android:layout_alignEnd="@+id/security_bid" />

    <TextView
        android:text="15.55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:id="@+id/security_bid"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/security_percentage"
        android:layout_alignBottom="@+id/security_percentage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="17.45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_ask"
        android:textSize="24sp"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/security_bid"
        android:layout_alignStart="@+id/security_bid" />

    <Button
        android:text="Sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buy_sell_button"
        android:layout_alignLeft="@+id/security_ask"
        android:layout_alignStart="@+id/security_ask"
        android:background="@android:color/holo_green_dark"
        android:textColor="@color/colorWhite" />

    <TextView
        android:text="Interest Percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="127dp"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:layout_above="@+id/buy_sell_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:id="@+id/textView12"
        android:layout_above="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:text="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/security_amount"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line_chart"
        android:layout_below="@+id/security_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView4"
        android:layout_above="@+id/textView12" />
</RelativeLayout>
